<!--index.wxml-->
<loading class="loding" wx:if="{{loading}}">正在加载...</loading>
<view class="index">
  <view class='title_prose'>
    <text>小说 >></text>
  </view>
  <view>
    <view class='content' wx:for="{{booksArr}}" wx:key="key">
       <image src='{{item.image}}' class='book_image'></image>
       <view class='book_message'>
          <text class='book_title'>{{item.title}}</text>
          <text class='book_name'>作者：{{item.author[0]}}</text>
          <text class="book_describe">简介：<text class='describe_content'>{{item.summary}}</text></text>
          <text class="book_publisher">{{item.pubdate}}/{{item.publisher}}</text>
       </view> 
    </view>
  </view>
  <view class='movie_title'>
    <text>电影 >></text>
  </view>
  <view class="content" wx:for="{{movieArr}}" wx:key="key">
    <image src='{{item.images.medium}}' class='movie_image'></image>
    <view class='book_message'>
        <text class='book_title'>{{item.title}}</text>
        <text class="actors">主演：<text wx:for="{{item.casts}}" wx:for-item="list" wx:key="key">{{list.name}} </text></text>
        <view class="actors_photos">
          <image class="actor_photo" wx:for="{{item.casts}}" wx:for-item="s" src='{{s.avatars.small}}'  wx:key="key"></image>
        </view>
    </view>
  </view>
</view>
